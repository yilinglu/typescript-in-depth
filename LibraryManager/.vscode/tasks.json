  "version": "0.1.0",
  "command": "tsc",
  "isShellCommand": true,
  "args": [
            "--outDir", "${workspaceRoot}/js",
            "--target", "ES5", 
            "--sourceMap", 
            "--watch",
            "app.ts"],
  "showOutput": "silent",
  "problemMatcher": "$tsc"
}